		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"http": "^0.0.1-security",
		"knex": "^2.4.0",
		"mysql2": "^2.1.0"
	},
	"devDependencies": {
		"nodemon": "^2.0.4"
	}
}
