{
	"name": "node_test",
	"version": "1.0.0",
	"description": "Testando banck end e front end na mesma aplicação",
	"main": "index.js",
	"author": "Leonardo Leite",
	"license": "MIT",
	"scripts": {
		"start": "npm install && cd client && npm install && npm run-script build && cd .. && node index.js",
		"client": "cd client && npm start",
